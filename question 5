#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size of square matrix: ";
    cin >> n;

//part a: diagonal matrix
    int diag[n];
    cout << "Enter diagonal elements: ";
    for (int i = 0; i < n; i++) cin >> diag[i];
    cout << "Diagonal Matrix: " << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i == j) cout << diag[i] << " ";
            else cout << 0 << " ";
        }
        cout << endl;
    }

//part b: tTri-diagonal matrix
    int tri[3*n - 2];
    cout << "Enter tri-diagonal elements: ";
    for (int i = 0; i < 3*n - 2; i++) cin >> tri[i];
    cout << "Tri-diagonal Matrix: " << endl;
    int k = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (abs(i - j) <= 1) cout << tri[k++] << " ";
            else cout << 0 << " ";
        }
        cout << endl;
    }

//part c: lower triangular matrix
    int lower[n*(n+1)/2];
    cout << "Enter lower triangular elements: ";
    for (int i = 0; i < n*(n+1)/2; i++) cin >> lower[i];
    cout << "Lower Triangular Matrix: " << endl;
    k = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i >= j) cout << lower[k++] << " ";
            else cout << 0 << " ";
        }
        cout << endl;
    }

//part d:upper triangular matrix
    int upper[n*(n+1)/2];
    cout << "Enter upper triangular elements: ";
    for (int i = 0; i < n*(n+1)/2; i++) cin >> upper[i];
    cout << "Upper Triangular Matrix: " << endl;
    k = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i <= j) cout << upper[k++] << " ";
            else cout << 0 << " ";
        }
        cout << endl;
    }

//part e:symmetric matrix
    int sym[n*(n+1)/2];
    cout << "Enter symmetric matrix lower part: ";
    for (int i = 0; i < n*(n+1)/2; i++) cin >> sym[i];
    cout << "Symmetric Matrix: " << endl;
    k = 0;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i >= j) cout << sym[(i*(i+1))/2 + j] << " ";
            else cout << sym[(j*(j+1))/2 + i] << " ";
        }
        cout << endl;
    }

    return 0;
}
